{
  "manifest_version": 3,
  "name": "SimpLingo",
  "version": "1.0",
  "description": "A browser extension for translating and simplifying text.",
  "permissions": ["activeTab"],
  "content_scripts":[
    {
     "type": "module",
     "matches":["<all_urls>"],
     "js":["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
